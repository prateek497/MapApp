@{
    ViewBag.Title = "Map Applicaion";
}

<div class="container-fluid" style="padding:0; margin:0" ng-controller="MapCtrl">
    <div class="row" style="padding:0; margin:0">
        <div class="col-lg-12 col-md-12 col-sm-12" style="padding:0; margin:0">
            <div class="col-lg-9 col-md-9 col-sm-9" style="padding:0; margin:0">
                <div id="dvMap" style="width: 100%; height: 46vw"></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <labe>UserName:</labe>
                <input type="text" placeholder="Logged in user" class="form-control" ng-model="userName">

                <button class="btn btn-primary btn-sm" style="margin:5px;" ng-click="addMarker()"> Add Note</button>
                <input type="text" placeholder="Search" class="form-control" ng-model="query">
                <br />
                <ul class="list-group">
                    <li class="list-group-item" ng-repeat="note in NotesList  | filter:query">
                        {{"ID: " + note.Id + ", Note: "+ note.Notes +", NAME: " + note.User +", LAT: " + note.Lat + ", LNG: " + note.Long}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>